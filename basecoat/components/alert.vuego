<template :required="title">
  <div role="alert" class="alert" v-bind:class="class">
    <svg v-if="icon" v-html="icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
    </svg>

    <h2>{{ title }}</h2>

    <section v-if="description">{{ description }}</section>
  </div>
</template>
